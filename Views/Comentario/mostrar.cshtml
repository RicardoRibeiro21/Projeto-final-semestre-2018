@using Senai.OO.ProjetoFinal.Models;
@{
    List<ComentarioModel> comentarios = ViewData["Comentarios"] as List<ComentarioModel>;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Aprovação de comentários - Check Point</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/style-aprovacao.css" />
    <script src="main.js"></script>
</head>
<body>
        <header>
            <div class="container">
                <div class="banner">
                    <nav class="menu">
                        <ul>
                        <li>
                            <a>@Html.ActionLink("Sobre Nós", "sobre", "Comentario")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Contato", "Contato", "Comentario")</a>
                        </li>
                        <li>
                            <a>@Html.ActionLink("Suporte", "perguntas", "Comentario")</a>
                        </li>
                        <li>
                            <a >@Html.ActionLink("Home", "index", "Comentario")</a>
                        </li>
                           <li>
                            <a >@Html.ActionLink("Cadastrar", "Cadastrar", "Usuario")</a>
                        </li>
                        <li>
                            <a >@Html.ActionLink("Login", "FazerLogin", "Usuario")</a>
                        </li>
                    </ul>
                    </nav>
                    <div class="banner-opacity">
                        <div class="logo">
                            <img src="./img/logo.svg" alt="Logo checkpoint">
                        </div>
                    </div>
                </div>
        </header>
        <main>
            <h2>Aprovação de comentários</h2>
            <section id="comentarios">
                  @foreach (ComentarioModel item in comentarios){
            <div class="coments">
                    <table>
                        <td>
                <div class="coment-1 grid-1">
                    <img src="/img/Foto de perfil.jfif" alt="Foto de perfil" class="item img">
                    <p name="comentarioUsuario" class="item comentarioUsuario">@item.Texto</p>
                    </div>
                    </td>
                    <td>
                    <p name="nomeUsuario" class="item nomeUsuario">@item.Usuario</p>
                    </td> 
                    <td>
                    <p name="dataComentario" class="item dataComentario"> @item.DataCriacao.ToShortDateString()</p>      
                    </td>
               <td>
                        <label class="item">
                            <a href="../Comentario/Aprovacao?id=@item.Id">Aprovar</a>
                            <a href="../Comentario/Rejeitar?id=@item.Id">Rejeitar</a>
                        </label>
                        </td>
             </table>
                    </div>
                  }
                </section>
                <footer>
                <div class="rodape">
                    
                </div>
                </footer>
                </section>
        </main>
</body>
</html>